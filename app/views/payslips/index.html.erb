<header class="text-center">
  <h1>Employee Monthly Payslip</h1>
</header>

<div class="container">
  <div class="row">
    <div class="col-3">
      <%= render('form') %>
    </div>

    <div class="col-9">
      <% if flash.now[:alert] %>
        <div class="alert alert-danger" role="alert">
          <%= flash.now[:alert] %>
        </div>
      <% end %>

      <% if @payslip_set %>
        <% if @payslip_set.errors.any? %>
          <div id="error_explanation" class="alert alert-danger">
            <h2>There're <%= pluralize(@payslip_set.errors.count, "error") %> in csv:</h2>

            <ul>
              <% @payslip_set.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% else %>
          <%= render('table') %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
